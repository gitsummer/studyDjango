<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory >
   <property name="hibernate.connection.url">jdbc:sqlserver://localhost;DatabaseName=Taxi</property>
   <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
   <property name="hibernate.connection.username">sa</property>
   <property name="hibernate.connection.password">wenyuan</property>
   <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
   <property name="hibernate.show_sql">true</property>
   
   
   <mapping resource="com/taxi/model/User.hbm.xml"/>
   <mapping resource="com/taxi/model/PassInfo.hbm.xml"/>
   <mapping resource="com/taxi/model/DrivInfo.hbm.xml"/>
   <mapping resource="com/taxi/model/OrderHistory.hbm.xml"/>

	</session-factory>
</hibernate-configuration>